<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Activity_ControlPanelUserMenu">

    <Button
        android:id="@+id/btnViewOrderHistory"
        android:text="View Order History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnViewOrderHistory"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnEditProfile"/>

    <Button
        android:id="@+id/btnBack"
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnBack"/>

</LinearLayout>